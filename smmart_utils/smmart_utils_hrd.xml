<tool id="smmart_utils_hrd" name="HRD Signature Analysis" version="@VERSION@.0" profile="17.09">

    <description></description>

    <macros>
        <import>macros.xml</import>
    </macros>

    @VERSION_CMD@

    <expand macro="requirements"/>

    <command detect_errors="exit_code"><![CDATA[
        smmart_utils hrd 
        $expression
        $metadata
        $sample
        $background
        output
    ]]></command>

    <inputs>
        <param name="expression" type="data" format="tsv,tabular" label="Sample Expression Matrix"/>
        <param name="metadata" type="data" format="tsv,tabular" label="Sample Metadata"/>
        <param name="sample" type="text" label="Sample Name"/>
        <param name="background" type="data" format="tsv,tabular" label="Background Expression Matrix"/>
    </inputs>

    <outputs>
        <data name="output_dir" format="png" from_work_dir="output/distribution.png" label="${tool.name} on ${on_string}: Distribution"/>
    </outputs>

    <help><![CDATA[
        This command runs the HRD (Homologous Recombination Deficiency) Gene Signature Analysis on SMMART samples.  
        
        Usage: smmart_utils hrd <smmart expression matrix> <smmart sample metadata> <sample of interest> <background expression matrix> <output directory>
            
    ]]></help>

</tool>
